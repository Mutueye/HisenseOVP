.mhi-topbar
	width 100%
	height 48px
	background-color rgba(0,0,0,0.6)
	position fixed
	overflow hidden
	transition(height,0.2s,ease)
	z-index 100
	top 0px
	.btn-menu
		width 32px
		height 32px
		display block
		float left
		margin 8px
		background-image url('images/mhi-icon-menu.png') 
		background-repeat no-repeat
		background-size 100%
	.btn-tiyan
		width auto
		float right
		margin 10px
		height 28px
		padding 0px 10px
		background-color lighten(HISENSE_BLUE,10%)
		color #ffffff
		line-height 28px
		font-size 14px
		text-align center
		border-radius 2px
		&.touched
			background-color lighten(HISENSE_BLUE,20%)
	.page-btns
		width 160px
		height auto
		margin 20px auto
		display block
		list-style none
		li
			display block
			box-sizing content-box
			width 160px
			height 50px
			border-bottom 1px solid rgba(255,255,255,0.2)
			text-align center
			line-height 50px
			color #ffffff
			font-size 18px
			&.touched
				background-color rgba(255,255,255,0.2)
			&:last-child
				border-bottom none

	&.expand
		height 250px
		.btn-menu
			background-image url('images/mhi-icon-menu-close.png')
