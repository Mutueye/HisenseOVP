.page-4-container
	display block
	overflow hidden
	width auto
	padding-top 150px
	background-image url('images/page-4-bg.jpg')
	background-position center bottom
	background-repeat no-repeat
.page-4-title
	width auto
	display block
	.page-4-title-1
		font-size 40px
		line-height 42px
		font-weight bold
		letter-spacing 10px
		color BLUE_GRAY
		text-align center
		margin-bottom 20px
	.page-4-title-2
		font-size 28px
		line-height 32px
		letter-spacing 3px
		color lighten(BLUE_GRAY,20%)
		text-align center
	.page-4-title-line
		width 300px
		height 1px
		margin 30px auto
		background-color lighten(BLUE_GRAY,60%)
		display block
.page-4-text
	width auto
	display block
	p
		text-indent 2em
		font-size 14px
		color GRAY_33
		text-align justify
		line-height 24px
		margin 0
.page-4-item
	display block
	margin 10px 0px 40px 0px
	width auto
	box-sizing border-box
	border 1px solid #ffff
	min-height auto
	overflow visible
	position relative
	.page-4-item-arrow
		position absolute
		display none
		border-arrow(HISENSE_BLUE,10px,bottom)
		left 50%
		margin-left -10px
		bottom 82%
	.page-4-item-mask
		position absolute
		width 200%
		left 50%
		margin-left -100%
		height 0
		bottom 85%
		background-color HISENSE_BLUE
		transition(top,0.2s,ease-in-out)
		overflow hidden
		&.left
			left -1px
			margin-left 0px
		&.right
			right -1px
			left auto
			margin-right 0px
			margin-left auto
		.page-4-item-text
			width auto
			height auto
			margin 14px 16px
			font-size 12px
			color #ffffff
			line-height 20px
			text-align justify
	img
		width 100%
		height auto
		display block
		float left
	&:hover
		background-image url('images/hi-bg-white-pct60.png')
		background-repeat repeat
		.page-4-item-mask
			height auto
			z-index 10
		.page-4-item-arrow
			display block
.hi-footer
	width 100%
	height auto
	display block
	background-color #ffffff
	padding 40px 0px
	.hi-footer-title
		width 628px
		height 64px
		display block
		margin 0 auto
		background url('images/hi-footer-title.png') no-repeat
	.hi-footer-line
		margin-top 40px
		height 1px
		margin-bottom 20px
		width 100%
		background-color GRAY_E3
	.hi-footer-links
		width 100%
		text-align center
		font-size 14px
		line-height 20px
		height 20px
		color GRAY_66
		margin-bottom 10px
		.footer-dvline
			width 1px
			height 12px
			display inline-block
			background-color GRAY_E3
			margin 0px 10px 0px 6px
		a
			color GRAY_66
			text-decoration none
			&:hover
				text-decoration underline
				color HISENSE_BLUE




