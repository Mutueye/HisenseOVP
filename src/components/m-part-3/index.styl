.m-part-3
	width 100%
	height auto
	background #1bc9ae
	display block
	overflow hidden
	padding-bottom 20px
	.m-part-3-title-container
		width 100%
		padding 20px
		background-color GRAY_E3
		overflow hidden
	.m-part-3-content
		display block
		overflow hidden
		width auto
		margin -20px 20px 0px 20px
		min-height 300px
		background-color #ffffff
		.m-part-3-solgan
			width 80%
			height auto
			margin 30px auto
			overflow hidden
			display block
			img
				width 100%
				height auto
				display block
				float left
		.m-part-3-item
			width 100%
			height auto
			display block
			margin-bottom 40px
			.m-part-3-icon
				width 94px
				height 94px
				display block
				margin 0 auto
				img
					width 100%
					height 100%
					display block
					float left
			.m-part-3-title
				width 100%
				margin-top 14px
				display block
				height 30px
				font-size 20px
				line-height 30px
				color GRAY_66
				text-align center
	.m-part-3-shadow
		width 80%
		float left
		height auto
		margin-right 20px
		margin-left 10px
		overflow hidden
		display block
		img
			width 100%
			height 100%
			display block
			float left
	.m-part-3-article
		width auto
		padding 20px
		p
			text-indent 2em
			line-height 24px
			font-size 14px
			text-align justify
			color #ffffff
			margin 0
			text-shadow 0 1px 1px rgba(black,0.3)
			span
				font-size 17px
	.m-part-3-solgan2
		width auto
		margin 20px
		display block
		margin-bottom 30px
		overflow hidden
		img
			width 100%
			height auto
			display block
			float left
	.m-part-3-item2
		width auto
		height auto
		display block
		position relative
		padding 10px 20px 30px 104px
		min-height 44px
		.m-part-3-item2-left
			position absolute
			width 44px
			height 44px
			left 40px
			top 10px
			display block
			img
				width 100%
				height 100%
				display block
				float left
		.m-part-3-item2-right
			width 100%
			margin-top 9px
			display block
			font-size 20px
			font-style italic
			color #faffbf
			line-height 26px



